@{
    ViewData["Title"] = "Home Page";
}

@model NichDevDotNetCore.Models.ViewModels.PostsViewModel
@{
    ViewData["Title"] = "Posts";
}

<head>
    <meta charset="utf-8" />

    <script src="scripts/app.js"></script>

    <!-- Bootstrap files -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/PluralSightFlexBoxBootstrap4.css" />

    <title></title>
</head>

@*Banner*@
<div class="d-flex flex-row banner">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<div id="navBar" class="d-flex">
</div>

<div class="d-flex flex-row">
    <div class="d-flex flex-row w-75">
        @await Html.PartialAsync("../Shared/_postsTable")
    </div>

    <div id="catFactDiv" class="d-flex flex-column w-25 secondaryBox">
        <div class="d-flex flex-row">
            <h3 class="card-title">Cat Facts</h3>
        </div>
        <div class="d-flex flex-row">
            <p id="catFactParagraph">@Model.CatFact.Fact</p>
        </div>
        <div class="d-flex flex-row">
            <input class="btn btn-info" type="button" value="Get Cat" onclick="getCatFact()" />
        </div>
    </div>
</div>

