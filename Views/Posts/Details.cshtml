@model NichDevDotNetCore.Models.Post

@{
    ViewData["Title"] = "Details";
}

@if (Model.Title != null)
{
    <h1>@Model.Title</h1>
}
else
{
    <h1>Title</h1>
}

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>
</div>
<div>
    @await Html.PartialAsync("../Shared/_postCommentsTable", Model)
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
