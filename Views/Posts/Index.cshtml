@model NichDevDotNetCore.Models.ViewModels.PostsViewModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <meta charset="utf-8" />

    <script src="scripts/app.js"></script>

    <!-- Bootstrap files -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/PluralSightFlexBoxBootstrap4.css" />

    <title></title>
</head>

<div id="navBar" class="d-flex">
    <h1 class="testBox" onclick="sayHello()">Index</h1>
    <form>
        <input type="button" value="Flex Box and Bootstrap 4 PluralSight course" onclick="location.href='@Url.Action("Index", "FlexBoxBootStrapCourse")'" />
    </form>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="d-flex flex-row">
    <div class="testBox">Box One</div>
    <div class="testBox">Box Two</div>
    <div class="testBox">Box Three</div>
    <div class="testBox">Box Four</div>
</div>

<div class="d-flex flex-row">

    <div class="d-flex flex-column w-25">
        <div class="d-flex flex-row">
            <h3>Cat Facts</h3>
        </div>
        <div class="d-flex flex-row">
            <p>@Model.CatFact.fact</p>
        </div>
        <div class="d-flex flex-row">
            <input type="button" value="Get Cat" onclick="getCatFact()" />
        </div>
    </div>

    <div class="d-flex flex-row w-50">
        @await Html.PartialAsync("../Shared/_postsTable")
    </div>

    <div class="d-flex flex-row w-25">
        <h3>Right</h3>
    </div>

</div>
