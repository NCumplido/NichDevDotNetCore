@model NichDevDotNetCore.Models.ViewModels.PostsViewModel

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Posts)
        {
            <tr  scope="row">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="callOuts">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="callOuts">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="callOuts">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>